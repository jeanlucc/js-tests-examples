{
  "name": "Task",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "status": {
      "type": "string"
    },
    "createDate": {
      "type": "date",
      "required": true
    },
    "updateDate": {
      "type": "date",
      "required": true
    },
    "categories": {
      "type": "string"
    },
    "creator": {
      "type": "string"
    }
  },
  "options": {
    "promisify": true
  },
  "relations": {
    "owner": {
      "model": "User",
      "type": "belongsTo"
    }
  }
}
